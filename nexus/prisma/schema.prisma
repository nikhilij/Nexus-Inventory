generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  // relations
  pins      InventoryPin[]
  sessions  InventorySession[]
}

model InventoryPin {
  id        String   @id @default(cuid())
  userId    String?
  pin       String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

model InventorySession {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User?    @relation(fields: [userId], references: [id])
}

model SKU {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  description String?
  onHand      Int      @default(0)
  createdAt   DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  ip        String?
  meta      Json?
  createdAt DateTime @default(now())
}
